<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androiddev97.noteapp2021">

    <application
        android:allowBackup="true"
        android:icon="@drawable/notebook"
        android:label="ToDo Color"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteApp2021">
        <activity
            android:theme="@style/Theme.MaterialComponents.NoActionBar"
            android:name=".ui.main.view.SearchActivity"></activity>
        <activity
            android:name=".ui.main.view.NoteActivity"
            android:theme="@style/Theme.NoteApp2021.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>